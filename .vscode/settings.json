{
    "nxConsole.generateAiAgentRules": true,
    
    // Angular Rules Integration
    "workbench.editorAssociations": {
        "*.md": "vscode.markdown.preview.editor"
    },
    
    // File associations for quick access to rules
    "files.associations": {
        "ANGULAR_RULES.md": "markdown"
    },
    
    // Angular-specific settings
    "typescript.preferences.includePackageJsonAutoImports": "on",
    "typescript.suggest.autoImports": true,
    "typescript.updateImportsOnFileMove.enabled": "always",
    
    // ESLint integration for Angular rules
    "eslint.validate": [
        "javascript",
        "javascriptreact",
        "typescript",
        "typescriptreact",
        "html"
    ],
    "eslint.workingDirectories": [
        ".",
        "apps/*"
    ],
    
    // Prettier integration
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.formatOnSave": true,
    "editor.codeActionsOnSave": {
        "source.fixAll.eslint": "explicit"
    },
    
    // Angular Language Service
    "angular.enable-strict-mode-prompt": false,
    "angular.suggest.includeCompletionsWithSnippetText": true,
    "angular.suggest.includeAutomaticOptionalChainCompletions": true,
    
    // Workspace-specific settings
    "search.exclude": {
        "**/node_modules": true,
        "**/dist": true,
        "**/.angular": true,
        "**/.nx": true
    },
    
    // Quick access to rules file
    "workbench.quickOpen.includeSymbols": true,
    "workbench.quickOpen.includeHistory": true
}