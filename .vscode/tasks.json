{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Open Angular Rules",
            "type": "shell",
            "command": "code",
            "args": ["ANGULAR_RULES.md"],
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            },
            "problemMatcher": []
        },
        {
            "label": "Lint Angular Code",
            "type": "shell",
            "command": "nx",
            "args": ["lint", "main-app"],
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            },
            "problemMatcher": ["$eslint-stylish"]
        },
        {
            "label": "Format Code",
            "type": "shell",
            "command": "nx",
            "args": ["format:write"],
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            },
            "problemMatcher": []
        }
    ]
} 